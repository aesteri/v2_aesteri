---
import fs from 'fs';
import path from 'path';
import matter from 'gray-matter';
import Layout from '@/layouts/Layout.astro';

// Get all the project markdown files
const projectsDirectory = path.resolve('./src/content/projects');
const files = fs.readdirSync(projectsDirectory);

// Parse the markdown files into an array of projects
const projects = files.map((file) => {
  const filePath = path.join(projectsDirectory, file);
  const content = fs.readFileSync(filePath, 'utf-8');
  
  // Use gray-matter to parse front matter
  const { data: { title, description, link, date } } = matter(content);
  const parsedDate = new Date(date);
  return { title, description, link, date: parsedDate };
});

projects.sort((a, b) => b.date.getTime() - a.date.getTime());

---
<Layout>
    <div id="project-container">
        <div id="project-wrapper">
        <h1>My Projects</h1>
        <div class="projects-list">

        {projects.map((project) => (
            <sl-card class="card-header">
            <div slot="header">
                {project.title}
                <sl-icon-button name="stars" href={project.link} target="_blank" label="Settings"></sl-icon-button>
            </div>

            {project.description}
            
            <small>{project.date.toLocaleDateString()}</small>
            </sl-card>
        ))}
        </div>
    </div>
    </div>
</Layout>

<style>
    h1 {
        text-align: center;
    }
    #project-container {
        display:flex;
        flex-direction: column;
        height: 100%;
        width: 100%;
    }

    #project-wrapper {
        overflow-y: auto;
        
        justify-content: center;
		align-items: center;
    }
  .projects-list {
    display: grid;
    grid-template-columns: repeat(auto-fill, minmax(200px, 1fr));
    justify-items: center; /* Horizontally centers the items inside the grid */
  justify-content: center;
    align-items: center;
  }

   a {
