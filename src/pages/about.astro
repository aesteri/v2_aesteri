---
import Resume from '@/components/Resume.astro';
import Layout from '../layouts/Layout.astro';
import Introduction from '@/components/Introduction.astro';
import Timeline from '@/components/Timeline.astro';
import Yap from '@/components/Yap.astro';
import NoFooter from '@/layouts/NoFooter.astro';

// Welcome to Astro! Wondering what to do next? Check out the Astro documentation at https://docs.astro.build
// Don't want to use any of this? Delete everything in this file, the `assets`, `components`, and `layouts` directories, and start fresh.
---
<NoFooter>
	<div id="home-container">
        <div id="first">
            <div class="home-item1">
                <Introduction></Introduction>
            </div>

            <div class="home-item2">
                <div class="scroll-wrapper">
                    <div id="time-wrapper">

                        <Yap></Yap>
                    
                    </div>
                </div>
            </div>
        </div>
        <div id="second">
            <sl-divider style="--color: var(--sl-color-orange-300); "></sl-divider>
            <Resume></Resume>
        </div>
	</div>	
    
	<div class="mobile-only">
		<div id="mobile-home-container">
			<div class="mobile-home-item1">
				<Introduction></Introduction>
			</div>

			<div class="mobile-home-item2">
				<div class="mobile-scroll-wrapper">
					<div id="mobile-time-wrapper">
						<sl-divider style="--color: var(--sl-color-orange-300); "></sl-divider>
						<Timeline></Timeline>
					</div>
				</div>
			</div>
		</div>	
	</div>
	
</NoFooter>

<style>
	#home-container {
		display: flex;
        flex-direction: column;
        justify-items: center;
	}
    #first {
        display: grid;
		grid-template-columns: repeat(2, 1fr); /* 3 equal columns */
		overflow: hidden;
        padding: 30px;
    }
    #second {
        width: 50%;
        padding-bottom: 10px;
    }
	.home-item1 {
		position: sticky;
		top: 0; /* Required for sticky positioning */
		justify-content: center;
		align-items: center;
		text-align: center;
		display: flex;
		flex-direction: column;
		overflow: hidden;
	}
	.home-item2 {
		height: 100%;
		overflow-y: auto;
		display: flex;
		flex-direction: column;
	}
	.scroll-wrapper {
		flex: 1;
		width: 100%;
		display: flex;
		align-items: center;
	}
	.mobile-only {
		display: none;
	}
	#time-wrapper {
		width: 80%;
		display: flex;
		flex-direction: column;
	}
	@media screen and (min-width: 768px) {
		.mobile-only {
			display: none;
		}
		#home-container {
		display: grid;
	}
	}
	@media screen and (max-width: 767px) {
		.mobile-only {
			display:flex;
			flex-direction: column;
			height: 100%;
			width: 100%;
		}
		#home-container {
			display: none; /* ❗️ HIDE desktop layout on mobile */
		}
		#mobile-home-container {
			overflow-y: auto;
            
			justify-content: center;
			align-items: center;
			text-align: center;
		}
		#mobile-time-wrapper {
			justify-content: center;
			align-items: center;
			padding: 10px;
		}
		.mobile-home-item1 {
			justify-content: center; /* Center content vertically */
			align-items: center; /* Center content horizontally */
			padding: 20px;
		}
		.mobile-home-item2 {
			justify-content: center; /* Center content vertically */
			align-items: center;
			text-align: left; /* Center content horizontally */
			padding: 20px;
		}
	}
</style>